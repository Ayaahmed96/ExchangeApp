<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/signupbackgroundgradient"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/useremail"
            android:tint="#fff"
            android:layout_marginRight="-50dp"/>

        <EditText
            android:textColor="#fff"
            android:alpha="0.55"
            android:paddingLeft="60dp"
            android:textSize="19sp"
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email Addresse"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/userpassword"
            android:tint="#fff"
            android:layout_marginRight="-50dp"/>

        <EditText
            android:textColor="#fff"
            android:alpha="0.55"
            android:paddingLeft="60dp"
            android:textSize="22sp"
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:hint="Password"
            android:layout_marginBottom="8dp"
            android:inputType="textPassword" />
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#4a235a"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="19dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/Alredyregisteredtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Register yet? "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or login using phone "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#fff"/>

    </LinearLayout>
    <Button
        android:id="@+id/login_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#4a235a"
        android:text="Phone Login"
        android:textColor="#fff"
        android:textSize="19dp" />


</LinearLayout>