<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:background="@drawable/signupbackgroundgradient"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/defaultprofile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/username"
        android:tint="#fff"
        android:layout_marginRight="-50dp"/>
    <EditText
        android:textColor="#fff"
        android:alpha="0.55"
       android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:textSize="19sp"
        android:id="@+id/usernameedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:textColorHint="#fff"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/useremail"
            android:tint="#fff"
            android:layout_marginRight="-50dp"/>

    <EditText
        android:textColor="#fff"
        android:alpha="0.55"
        android:paddingLeft="60dp"
        android:textSize="19sp"
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email Addresse"
        android:textStyle="bold"
        android:textColorHint="#fff"
        android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/userpassword"
            android:tint="#fff"
            android:layout_marginRight="-50dp"/>

        <EditText
            android:textColor="#fff"
            android:alpha="0.55"
            android:paddingLeft="60dp"
            android:textSize="22sp"
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textColorHint="#fff"
        android:hint="Password"
        android:layout_marginBottom="8dp"
        android:inputType="textPassword" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/reenterpass"
            android:tint="#fff"
            android:layout_marginRight="-50dp"/>

        <EditText
            android:textColor="#fff"
            android:alpha="0.55"
            android:paddingLeft="60dp"
            android:textSize="22sp"
        android:id="@+id/signup_reenterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textColorHint="#fff"
        android:layout_marginBottom="8dp"
        android:hint="ReEnter Password"
        android:inputType="textPassword" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="10dp"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Address"/>
    </LinearLayout>


    <RadioGroup
        android:id="@+id/radipgp_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobtn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:checked="true"
            android:textColor="#fff"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radiobtn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#fff" />


    </RadioGroup>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#4a235a"
        android:text="Signup"
        android:textColor="#fff"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/Alredyregisteredtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Registered?  "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/signup_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"/>
    </LinearLayout>


</LinearLayout>